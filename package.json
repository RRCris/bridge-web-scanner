{
  "name": "bridge-scan-web",
  "version": "1.0.0",
  "description": "REST API bridge for NAPS2 scanner",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "pkg": "npm run build && npm run pkg:api &&  && xcopy scripts\\list-wia-devices.ps1 bin\\scripts\\ /I /Y",
    "pkg:api": "pkg . --targets node18-win-x64 --output bin/bridge-scan-web.exe"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "bin"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "iconv-lite": "^0.7.2",
    "node-windows": "^1.0.0-beta.8",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xml2js": "^0.6.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/iconv-lite": "^0.0.1",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@yao-pkg/pkg": "^5.11.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
